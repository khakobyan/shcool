<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @subject.description %>
</p>

<p>
  <strong>Teachers</strong>
  <ul>
    <% @subject.teacher_subjects.each do |teacher_subject| %>
      <li><%= link_to teacher_subject.teacher.first_and_last_name, teacher_path(teacher_subject.teacher) %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
